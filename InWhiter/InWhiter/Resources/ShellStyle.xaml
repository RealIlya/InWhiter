<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="LightShellStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="Coral" />
        <Setter Property="TabBarBackgroundColor" Value="WhiteSmoke" />
        <Setter Property="FlyoutBackgroundColor" Value="White" />

        <Setter Property="FlyoutBackdrop"> <!-- For black theme #2B2E4A -->
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="Coral"
                                  Offset="0.1" />
                    <GradientStop Color="Salmon"
                                  Offset="0.5" />
                    <GradientStop Color="WhiteSmoke"
                                  Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>